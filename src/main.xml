<?xml version="1.0" encoding="UTF-8" ?>
<lcui-app>
  <resource type="text/css" src="lcui.css"/>
  <resource type="text/css" src="main.css"/>
  <ui>
    <w class="window">
      <!-- Menu buttons -->
      <w class="menubar">
        <w type="button" class="btn btn-sm btn-outline-dark" data-toggle="modal" data-target="modal-win-connect">
          Connect
        </w>
        <w type="button" class="btn btn-sm btn-outline-dark" data-toggle="modal" data-target="modal-win-about">
          About
        </w>
      </w>
      <!-- Playing fields -->
      <w class="playarea">
        <w class="row">
          <w class="col col-4 playfield-wrapper-wrapper">
            <!-- Game & Preview -->
            <w class="row">
              <w class="col col-10 playfield-wrapper">
                <w id="playfield-1" class="playfield">
                  <w class="row">
                    <w type="textview" class="textview">
                      Your Field
                    </w>
                  </w>
                </w>
              </w>
              <w class="col col-2 playpreview-wrapper">
                <w class="playpreview">
                  <!-- Preview 1 -->
                  <w id="previewfield-1" class="playpreview-field">
                  </w>
                  <!-- Preview 2 -->
                  <w id="previewfield-2" class="playpreview-field">
                  </w>
                  <!-- Preview 3 -->
                  <w id="previewfield-3" class="playpreview-field">
                  </w>
                  <!-- Preview 4 -->
                  <w id="previewfield-4" class="playpreview-field">
                  </w>
                  <!-- Preview 5 -->
                  <w id="previewfield-5" class="playpreview-field">
                  </w>
                  <!-- Preview 6 -->
                  <w id="previewfield-6" class="playpreview-field">
                  </w>
                </w>
              </w>
            </w>
            <!-- Item box row -->
            <w class="row itembox-wrapper">
              <w class="col col-2" type="textview">
                Clear Line
              </w>
              <w class="playtile col col-1 item" type="textview"></w>
              <w class="playtile col col-1 item" type="textview"></w>
              <w class="playtile col col-1 item" type="textview"></w>
              <w class="playtile col col-1 item" type="textview"></w>
              <w class="playtile col col-1 item item-selected" type="textview">C</w>
              <w class="playtile col col-1 item item-active" type="textview">G</w>
              <w class="playtile col col-1 item item-active" type="textview">Q</w>
              <w class="playtile col col-1 item item-active" type="textview">S</w>
              <w class="playtile col col-1 item item-active" type="textview">R</w>
              <w class="playtile col col-1 item item-active" type="textview">B</w>
            </w>
          </w>
          <!-- Player 2 + 3 -->
          <w class="col col-2 playfield-wrapper-secondary">
            <w id="playfield-2" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #2
                </w>
              </w>
            </w>
            <w id="playfield-3" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #3
                </w>
              </w>
            </w>
          </w>
          <!-- Player 4 + 5 -->
          <w class="col col-2 playfield-wrapper-secondary">
            <w id="playfield-4" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #4
                </w>
              </w>
            </w>
            <w id="playfield-5" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #5
                </w>
              </w>
            </w>
          </w>
          <!-- Player 6 + 7 -->
          <w class="col col-2 playfield-wrapper-secondary">
            <w id="playfield-6" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #6
                </w>
              </w>
            </w>
            <w id="playfield-7" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #7
                </w>
              </w>
            </w>
          </w>
          <!-- Player 8 + 9 -->
          <w class="col col-2 playfield-wrapper-secondary">
            <w id="playfield-8" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #8
                </w>
              </w>
            </w>
            <w id="playfield-9" class="playfield playfield-secondary">
              <w class="row">
                <w type="textview" class="textview">
                  Player #9
                </w>
              </w>
            </w>
          </w>
        </w>
      </w>
      <!-- Chat -->
      <w class="chatarea">
        <w id="chatarea-output" class="chatarea-output"/>
        <w class="chatarea-input" type="textedit" placeholder="Enter message..."/>
      </w>
      <!-- About modal -->
      <w id="modal-win-about" type="modal" class="modal">
        <w class="modal-dialog">
          <w class="modal-header">
            <w type="h5" class="modal-title">
              cetrinet by coderobe
            </w>
          </w>
          <w class="modal-body">
            <w type="p">
              Version 0.2.0
            </w>
            <w type="button" class="btn btn-danger btn-block" data-dismiss="modal">
              Go Back
            </w>
            <w type="p"></w>
            <w type="p">Project links</w>
            <w type="button" class="btn btn-info">
              Sourcecode
            </w>
            <w type="button" class="btn btn-success">
              Donate
            </w>
          </w>
        </w>
      </w>
      <!-- Connection dialog modal -->
      <w id="modal-win-connect" type="modal" class="modal">
        <w class="modal-dialog">
          <w class="modal-header">
            <w type="h5" class="modal-title">
              Connect to a server
            </w>
          </w>
          <w class="modal-body">
            <w class="form">
              <w class="form-group">
                <w type="label" for="input-data-server">
                  Server Address
                </w>
                <w type="textedit" class="form-control" id="input-data-server" placeholder="rrerr.net"/>
              </w>
              <w class="form-group">
                <w type="label" for="input-data-username">
                  Username
                </w>
                <w type="textedit" class="form-control" id="input-data-username"/>
              </w>
              <w class="form-group">
                <w id="input-connect" type="button" class="btn btn-success" data-dismiss="modal">
                  Connect
                </w>
              </w>
            </w>
            <w type="button" class="btn btn-danger" data-dismiss="modal">
              Close
            </w>
          </w>
        </w>
      </w>
    </w>
  </ui>
</lcui-app>